<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/rail_in"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text ="Rail_in"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_marginTop="35dp"
        android:background="#8AB5D9"/>

    <TextView
        android:id="@+id/text_rail_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_rail_in"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textSize="40sp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/rail_out"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text ="Rail_out"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        android:background="#8AB5D9"
        />


    <TextView
        android:id="@+id/text_rail_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_rail_out"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textSize="40sp"
        android:textStyle="bold"
        />


</LinearLayout>